<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TruthTable">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="286dp"
            android:layout_height="37dp"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="161dp"
            android:layout_height="41dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="Truth Table"
            android:textColor="@color/hkrDarkGreen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="170dp"
            android:text="Submit">

        </Button>

        <TextView
            android:id="@+id/textView"
            android:layout_width="130dp"
            android:layout_height="350dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:text="    A"
            android:textColor="@color/hkrDarkGreen"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="113dp"
            android:layout_height="51dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:text="   B"
            android:textColor="@color/hkrDarkGreen"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="300dp"
            android:layout_marginRight="300dp"
            android:text=" Output"
            android:textColor="@color/hkrDarkGreen"
            android:textSize="40sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/out1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="50sp"
            app:backgroundTint="@color/hkrDarkGreen" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/out2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/hkrDarkGreen"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="50sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/out3"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:background="@color/hkrDarkGreen"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="50sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_23"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/out4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/hkrDarkGreen"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="50sp" />
    </LinearLayout>
</LinearLayout>